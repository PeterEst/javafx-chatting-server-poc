        xmlns:fx="http://javafx.com/fxml"
        fx:controller="com.peterestephan.chattingserver.Controller"
        prefHeight="396"
        prefWidth="478"
>
    <children>
        <Button fx:id="button_send" layoutX="404" layoutY="338" text="Send"/>
        <TextField fx:id="tf_message" layoutX="30" layoutY="338" prefWidth="361" prefHeight="26"/>
        <ScrollPane fx:id="sp_main" layoutX="30" layoutY="70" prefHeight="256" prefWidth="418" fitToWidth="true">
            <VBox fx:id="vbox_messages" prefHeight="248" prefWidth="412"/>
        </ScrollPane>

        <Label layoutX="180" layoutY="26" text="Server">
            <font>
                <Font name="Arial Rounded MT Bold" size="23"/>
            </font>
        </Label>
    </children>
</AnchorPane>
